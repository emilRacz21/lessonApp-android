<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:baselineAligned="false">
        <LinearLayout
            android:layout_marginEnd="12sp"
            android:layout_marginStart="12sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/daysMonth"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:text="@string/pon"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />
                <TextView
                    android:text="@string/_12"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:id="@+id/daysNum"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/layoutDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13sp"
            android:background="@drawable/radius_lesson"
            android:orientation="vertical"
            tools:ignore="TextSizeCheck,VisualLintBounds">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="30sp"
                    android:columnCount="5"
                    android:rowCount="1">

                        <TextView
                            android:id="@+id/timeBegin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5sp"
                            android:text="@string/_10_00"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5sp"
                            android:text="@string/a"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/timeEnd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="17sp"
                            android:text="@string/_10_30"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_av_timer_24"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/timeResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_30"
                            android:textColor="@color/colorGray"
                            android:textSize="22sp"
                            tools:ignore="TextContrastCheck" />
                </GridLayout>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="22sp"
                    android:columnCount="3"
                    android:rowCount="1">

                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_beenhere_24"
                            tools:ignore="ImageContrastCheck" />

                        <TextView
                            android:id="@+id/schoolText"
                            android:layout_width="175sp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="12sp"
                            android:text="@string/akademia_zamosjska_wydzia_logistyki"
                            android:textColor="@color/colorGray"
                            android:textSize="18sp"
                            tools:ignore="TextSizeCheck,TextContrastCheck" />

                        <ImageView
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10sp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_location_on_24"
                            tools:ignore="ImageContrastCheck" />
                </GridLayout>

                <LinearLayout
                    android:layout_marginBottom="27sp"
                    android:layout_width="150sp"
                    android:layout_height="40sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="22sp"
                    android:background="@drawable/radius_accept">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="12sp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/baseline_check_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/obecno"
                            android:textColor="@color/colorGreen"
                            android:textSize="18sp"
                            tools:ignore="TextContrastCheck" />

                </LinearLayout>
        </LinearLayout>
</LinearLayout>