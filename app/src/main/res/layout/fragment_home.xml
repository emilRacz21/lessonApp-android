<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F1F1F1"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/todayLessons"
        android:layout_marginTop="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginStart="10sp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/home_callendar"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#126AAF"
            android:textStyle="bold"
            android:layout_marginStart="12sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DZISIEJSZE ZAJĘCIA"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/month_grid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_below="@+id/todayLessons">

        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="12sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POPRZEDNI"/>

        <ImageView
            android:layout_marginStart="10sp"
            android:layout_width="170sp"
            android:layout_height="wrap_content"
            android:src="@drawable/home_today"/>

        <TextView
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginStart="12sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NASTĘPNY"/>
    </GridLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:src="@drawable/baseline_calendar_month_24"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brak zajec w podanym zakresie" />
        <TextView
            android:textSize="16sp"
            android:textColor="#126AAF"
            android:textStyle="bold"
            android:layout_marginTop="22sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZOBACZ WSZYSTKIE ZAJECIA" />
    </LinearLayout>



</RelativeLayout>